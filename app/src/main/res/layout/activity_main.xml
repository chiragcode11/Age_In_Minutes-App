<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@color/white"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="CALCULATE YOUR"
        android:padding="10dp"
        android:textStyle="bold"
        android:textSize="30sp"
         />
    <TextView
        android:id="@+id/head_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="AGE"
        android:padding="10dp"
        android:textStyle="bold"
        android:textSize="30sp"
        />
    <TextView
        android:id="@+id/head_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="IN MINUTES"
        android:padding="10dp"
        android:textStyle="bold"
        android:textSize="30sp"
        />

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textColor="@color/black"
        android:text="select date"
        android:textSize="20dp"
        android:backgroundTint="@color/color_bl1"
        />
    <TextView
        android:id="@+id/head_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="01.01.2000"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textSize="20sp"
        />
    <TextView
        android:id="@+id/head_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="SELECTED DATE"
        android:padding="0dp"
        android:textSize="18sp"
        />
    <TextView
        android:id="@+id/head_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="10000000"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textSize="30sp"
        />

    <TextView
        android:id="@+id/head_6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="0dp"
        android:text="MINUTES"
        android:textColor="@color/black"
        android:textSize="18sp"
        />

</LinearLayout>